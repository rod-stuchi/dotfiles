    // ====================================================================================================
    // TODO: this might be removed, as it works in sway, not sure in Niri.
    {
        "output": [
            "HEADLESS-1",
            "HEADLESS-2",
            "HEADLESS-3",
            "HEADLESS-4",
            "HEADLESS-5",
            "HEADLESS-6",
            "HEADLESS-7",
            "HEADLESS-8",
            "HEADLESS-9"
        ],
        "spacing": 4,
        "modules-center": [
            "sway/window"
        ],
        "modules-right": [
            "cpu",
            "memory",
            "temperature",
            "clock"
        ],
        "sway/window": {
            "format": "{}",
            "max-length": 50,
            "rewrite": {
                "(.*) — Mozilla Firefox": " $1",
                "(.*) - Google Chrome": " $1",
                "(.*) - zsh": "> [$1]",
                "(.*) - NVIM": " $1"
            }
        },
        "clock": {
            "format": "{:%H:%M (%Z)}",
            "tooltip-format": "{tz_list}",
            "timezones": [
                "America/Sao_Paulo",
                "Europe/London",
                "America/New_York",
                "America/Los_Angeles",
                "Asia/Tokyo"
            ],
            "format-alt": "{:%Y-%m-%d}"
        },
        "cpu": {
            "format": "{usage}% ",
            "tooltip": false
        },
        "memory": {
            "format": "{}%  "
